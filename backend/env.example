# Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# Production Configuration
# Set to 'production' in production environment
# NODE_ENV=production

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# JWT Configuration
# Get this from Supabase Dashboard → Settings → API → JWT Settings
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# CORS Configuration
# For development: http://localhost:5173
# For production: https://www.ladances.com
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=300

# Session Configuration
SESSION_SECRET=your_secure_session_secret_here_change_in_production

# Trust Proxy Configuration
# Required for production environments with reverse proxy (Render, Cloudflare)
TRUST_PROXY=1 